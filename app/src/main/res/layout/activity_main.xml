<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Name"
            android:ems="10"
            android:id="@+id/etUno" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="99dp" android:layout_marginTop="116dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="99dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Name"
            android:ems="10"
            android:id="@+id/etDos" android:layout_marginTop="54dp"
            app:layout_constraintTop_toBottomOf="@+id/etUno" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="100dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="98dp"/>
    <Button
            android:text="SUMAR"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnSumar" android:layout_marginTop="80dp"
            app:layout_constraintTop_toBottomOf="@+id/etDos" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="58dp"/>
    <Button
            android:text="MULTIPLICAR"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnMultiplicar" android:layout_marginTop="81dp"
            app:layout_constraintTop_toBottomOf="@+id/etDos" android:layout_marginStart="15dp"
            app:layout_constraintStart_toEndOf="@+id/btnSumar"/>
    <Button
            android:text="DIVIDIR"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnDividir" android:layout_marginTop="81dp"
            app:layout_constraintTop_toBottomOf="@+id/etDos" android:layout_marginStart="23dp"
            app:layout_constraintStart_toEndOf="@+id/btnMultiplicar" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="51dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>